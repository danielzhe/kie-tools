{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceRoot}"],
      "outFiles": ["${workspaceRoot}/dist/**/*.js"],
      "preLaunchTask": "npm: watch"
    },
    {
      "name": "Run Extension (web)",
      "type": "pwa-extensionHost",
      "debugWebWorkerHost": true,
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceRoot}", "--extensionDevelopmentKind=web"],
      "outFiles": ["${workspaceRoot}/dist/**/*.js"],
      "preLaunchTask": "npm: watch"
    },
    {
      "name": "Debug UI Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vscode-extension-tester/out/cli.js",
      "args": [
        "setup-and-run",
        "${workspaceFolder}/out/*.js",
        "--mocha_config",
        "${workspaceFolder}/e2e-tests/settings.json"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "node",
      "internalConsoleOptions": "neverOpen"
    }

    // "test-e2e": "run-script-if --ignore-errors \"$(build-env endToEndTests.ignoreFailures)\" --bool \"$(build-env endToEndTests.run)\" --then \"pnpm test-e2e:clean\" \"cpr e2e-tests/resources e2e-tests-tmp/resources\" \"tsc --project tsconfig.e2e-tests.json --skipLibCheck --sourceMap true\" \"extest setup-and-run --yarn -c max -u -e ./test-resources -o e2e-tests/settings.json out/*.test.js\"",
  ]
}
